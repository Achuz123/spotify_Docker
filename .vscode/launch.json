{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug",
                "--inspect=9229"
            ]
        }
    ],
    "tasks": [
        {
            "label": "run-proxy",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "proxy"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}